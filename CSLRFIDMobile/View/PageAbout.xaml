<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CSLRFIDMobile.View.PageAbout"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="About">

    <StackLayout Margin="0,100,0,0">
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Label x:Name="labelModel" Text="Model" />
            <Label x:Name="labelAppVer" Text="Application Version" />
            <Label x:Name="labelLibVer" Text="Library Version" />
            <Label x:Name="labelBtFwVer" Text="Bluetooth Firmware Version" />
            <Label x:Name="labelRFIDFwVer" Text="RFID Firmware Version" />
            <Label x:Name="labelSiliconlabFwVer" Text="SiliconLab IC Firmware Version" />
            <Label x:Name="labelSerialNumber" Text="Reader Serial Number" />
            <Label x:Name="labelPCBSerialNumber" Text="PCB Serial Number" />
        </StackLayout>

        <StackLayout Orientation="Vertical" VerticalOptions="EndAndExpand">
            <Button
                Clicked="buttonOpenPrivacypolicyClicked"
                FontSize="Large"
                HorizontalOptions="StartAndExpand"
                Text="Open Privacy policy" />
        </StackLayout>

    </StackLayout>

</ContentPage>
