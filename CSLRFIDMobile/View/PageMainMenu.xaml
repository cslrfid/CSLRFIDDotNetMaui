            <Border.StrokeShape>
                <RoundRectangle CornerRadius="8" />
            </Border.StrokeShape>
            <Border.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding ConnectButtonCommand}" CommandParameter="1" />
            </Border.GestureRecognizers>
            <Grid BackgroundColor="{StaticResource Primary}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Label
                    FontAttributes="Bold"
                    FontSize="Medium"
                    HorizontalOptions="CenterAndExpand"
                    Text="{Binding ConnectedButton}"
                    TextColor="White"
                    VerticalOptions="CenterAndExpand" />
            </Grid>
        </Border>

        <StackLayout
            Grid.Row="5"
            Grid.ColumnSpan="2"
            Margin="5,0,5,0"
            IsVisible="{Binding IsBatteryLevelVisible}"
            Orientation="Horizontal">
            <Image Source="battery.png" />
            <Label
                Text="{Binding LabelVoltage}"
                TextColor="{Binding LabelVoltageTextColor}"
                VerticalTextAlignment="Center" />
        </StackLayout>
